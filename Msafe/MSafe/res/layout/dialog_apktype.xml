<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_dialog_fileadmin_types"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dialog_apktype_title0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/checkbox_green_checked"
            android:textSize="@dimen/padding_list2" 
            android:padding="@dimen/padding_list"
            android:text="@string/apktype_title0" />

        <TextView
            android:id="@+id/dialog_apktype_title0_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/checkbox_green_checked"
            android:layout_toRightOf="@id/dialog_apktype_title0"
            android:padding="@dimen/padding_list"
            android:text="@string/duihao"
            android:textSize="@dimen/padding_list2" />
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/divider_height"
        android:layout_marginLeft="@dimen/padding_list"
        android:layout_marginRight="@dimen/padding_list"
        android:background="@color/gray_mainactivity_btn_press" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dialog_apktype_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/padding_list"
            android:textSize="@dimen/padding_list2" 
            android:textColor="@color/black"
            android:text="@string/apktype_title1" />

        <TextView
            android:id="@+id/dialog_apktype_title1_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/dialog_apktype_title1"
            android:textSize="@dimen/padding_list2" 
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:padding="@dimen/padding_list"
            android:text="@string/duihao" />
    </RelativeLayout>

</LinearLayout>