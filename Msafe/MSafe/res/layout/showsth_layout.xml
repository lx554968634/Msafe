<?xml version="1.0"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <!-- 首页的安全中心和一键检测 附带呼吸圈效果 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:background="@color/green_mainlayout_background"
        android:orientation="vertical"
        android:visibility="visible" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/saftytitle_mainlayout_background_up"
            android:textColor="@color/white_textcolor"
            android:textSize="@dimen/textsize_mainactiviy_top" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/padding_list"
        android:paddingRight="@dimen/padding_list"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/rubbish_btn_clear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/padding_list"
            android:layout_alignParentBottom="true" >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/clear" />
        </LinearLayout>

        <org.com.lix_.plugin.AListView
            android:id="@+id/grid_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/rubbish_btn_clear"
            android:background="@color/white"
            android:listSelector="@drawable/selector_highlight_button" />
    </RelativeLayout>

</LinearLayout>