<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/settingrubbish_scantime_part0"
            android:clickable="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_list"
            android:layout_marginTop="@dimen/padding_list"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/padding_list"
                android:text="@string/rubbish_setting_scan_time0"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_breathecircle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/padding_list"
                android:text="@string/duihao"
                android:textColor="@color/checkbox_green_checked"
                android:textSize="@dimen/padding_list2"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/divider_height_half"
            android:layout_marginLeft="@dimen/padding_list"
            android:layout_marginRight="@dimen/padding_list"
            android:background="@color/gray_mainactivity_btn_press" />

        <RelativeLayout
            android:id="@+id/settingrubbish_scantime_part1"
            android:clickable="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_list"
            android:layout_marginTop="@dimen/padding_list"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/padding_list"
                android:text="@string/rubbish_setting_scan_time1"
                android:textColor="@color/checkbox_green_checked"
                android:textSize="@dimen/textsize_breathecircle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/padding_list"
                android:text="@string/duihao"
                android:textColor="@color/checkbox_green_checked"
                android:textSize="@dimen/padding_list2" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/divider_height_half"
            android:layout_marginLeft="@dimen/padding_list"
            android:layout_marginRight="@dimen/padding_list"
            android:background="@color/gray_mainactivity_btn_press" />

        <RelativeLayout
            android:id="@+id/settingrubbish_scantime_part2"
            android:clickable="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_list"
            android:layout_marginTop="@dimen/padding_list"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/padding_list"
                android:text="@string/rubbish_setting_scan_time2"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_breathecircle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/padding_list"
                android:text="@string/duihao"
                android:visibility="gone"
                android:textColor="@color/checkbox_green_checked"
                android:textSize="@dimen/padding_list2" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/divider_height_half"
            android:layout_marginLeft="@dimen/padding_list"
            android:layout_marginRight="@dimen/padding_list"
            android:background="@color/gray_mainactivity_btn_press" />

        <RelativeLayout
            android:id="@+id/settingrubbish_scantime_part3"
            android:clickable="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_list"
            android:layout_marginTop="@dimen/padding_list"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/padding_list"
                android:text="@string/rubbish_setting_scan_time3"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_breathecircle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/padding_list"
                android:text="@string/duihao"
                android:visibility="gone"
                android:textColor="@color/checkbox_green_checked"
                android:textSize="@dimen/padding_list2" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/divider_height_half"
            android:layout_marginLeft="@dimen/padding_list"
            android:layout_marginRight="@dimen/padding_list"
            android:background="@color/gray_mainactivity_btn_press" />
    </LinearLayout>

</ScrollView>